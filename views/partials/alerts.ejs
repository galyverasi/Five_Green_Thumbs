<% if (alerts.error) { %>
    <% alerts.error.forEach(msg=> { %>
        <div class="row">
            <div class="card" style="width: 25rem;">
                <div class="card-body">
                    <%= msg %>
                </div>
            </div>
        </div>
        <% }) %>
            <% } %>
                <% if (alerts.success) { %>
                    <% alerts.success.forEach(msg=> { %>
                        <%= msg %>
                            <% }) %>
                                <% } %>